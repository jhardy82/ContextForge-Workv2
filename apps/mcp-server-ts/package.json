{
  "name": "taskman-mcp-v2",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "verify:task-schema": "tsx scripts/verify-task-schema.ts",
    "validate:projects": "tsx validate-project-tools.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:tasks": "vitest run src/features/tasks",
    "test:e2e": "RUN_E2E=true vitest run tests/e2e",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "devDependencies": {
    "@hapi/hoek": "^11.0.7",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.1",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.8",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.7.2",
    "vitest": "^4.0.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.47.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.48.0",
    "@opentelemetry/sdk-node": "^0.46.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "opossum": "^8.5.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0",
    "validator": "^13.15.20",
    "zod": "^3.25.76"
  }
}
